    <header class = "header">
        <nav> 
            {{ include('navigation.html.twig') }}     
        </nav>
    </header>
    <main class = "main">
        <section id="TeamMatches">
            <h2>Team Matches</h2>
        </section>
        <section id="welcome-message">
