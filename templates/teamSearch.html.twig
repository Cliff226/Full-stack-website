    <main class = "main">
        <div id="LiveScoresMatches"> 
            {% for comps in groupedMatches %}
                <div id="country-section">
                <h2 class="mt-4">{{ country }}</h2>

                {% for comp, matches in comps %}
                    <h4 class="mt-3">{{ comp }}</h4>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Home</th>
                                <th>Away</th>
                                <th>Score</th>
                                <th>Minute</th>
                                <th>Kickoff</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for m in matches %}
                                <tr>
                                    <td><img src="{{ m.homeTeamCrest }}" width="20" alt="logo"> {{ m.homeTeam.name }}</td>
                                    <td><img src="{{ m.awayTeamCrest }}" width="20" alt="logo"> {{ m.homeTeam.name }}</td>
                                    <td>{{ m.score.fullTime.home }} - {{ m.score.fullTime.away }}</td>
                                    <td>{{ m.minute }}</td>
                                    <td>{{ m.utcDate|date("H:i") }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table><br>

                {% endfor %}
                </div>
            {% endfor %}
        </div>
    </main>

