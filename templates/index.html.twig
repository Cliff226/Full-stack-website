        <div id="Welcome-section" class="welcome-section">
            <img src="public/images/San-siro.jpg" alt="Stadium Image" class="stadium-image">
            <div class="banner">
                <h1>Welcome to GoalRush {{ userData.name|upper }} {{ userData.surname|upper }}</h1>

                <p>
                    Your ultimate destination for live football scores and news.
                    {% if userData is defined and userData.favorite_league %}
                        Stay up to date with the latest from your favorite league: {{ userData.favorite_league|upper }}!
                    {% else %}
                        Discover scores, news, and updates from all leagues worldwide.
                    {% endif %}
                </p>
                <a class="linkButton" scrolldown href="#features-section">Explore</a>
            </div>
        </div>
        <div>
            <div class="row g-0">
                <div class="col sml-6">
                    <img class="side-image" src="public/images/stadium.jpg" alt="background image of a football stadium">
                </div>
                <div id = "intro" class="col sml-6">
                    <div class="intro-textTitle">
                        <h2>Get Started</h2>
                    </div>
                    <div class="intro-text">
                        <p>login or register to personalize your experience,
                         follow your favorite teams, and stay updated with the 
                         latest football action
                        </p>
                    </div>                
                </div>
            </div>
        </div>
        <div class="row g-0" id="features-section">
            <div class="col sml-3">
                <div class="feature-icon">
                    <div class="link-section">
                        <a class ="link-section-ancor" href="/liveScore.php">
                            <img class="link-section-img" src="public/images/kick.jpg" alt="kick image">
                            <h3>Live Scores</h3>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col sml-3">
                <div class="feature-icon">
                    <div class="link-section">
                        <a class ="link-section-ancor" href="/blog.php">
                            <img class="link-section-img" src="public/images/championsball.jpg" alt="ball image">
                            <h3>Blog</h3>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col sml-3">
                <div class="feature-icon">
                    <div class="link-section">
                        <a class ="link-section-ancor" href="/Profile.php">
                            <img class="link-section-img" src="public/images/net.jpg" alt="net image">
                            <h3>Profile</h3>
                       </a>
                    </div>
                </div>
            </div>                              
        </div>
    </main>
