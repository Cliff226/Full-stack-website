<!DOCTYPE html>
<html lang="en">
    {{ include('header.html.twig') }}
    <body>

        <header class="header">
            <nav>
                {# Include navigation template #}
                {{ include('navigation.html.twig') }}
            </nav>
        </header>

        <main class="main">
            <div class="profile">
                <h1>{{ user_name|e }}'s Profile</h1>

                <div class = 'userbuttons'>
                    {# Logout Button #}
                    <form method="post" action="logout.php" class="inline-form">
                        <button class="buttonIcon" type="submit">
                            <img src="public/icons/logout.png" alt="Logout Icon">
                            Logout
                        </button>
                    </form>
                </div>

                <h2>Your Articles</h2>
                {% for post in posts %}
                    <div class="user-post mb-3">
                        <h3>{{ post.title|e}}</h3>
                        <p>Created: {{ post.created_at|e }}</p>
                        <div class="btn-group btn-group-lg" role="group">
                            <a class="btn btn-warning" href="editPost.php?id={{ post.id|e }}">Edit</a>
                            <a class="btn btn-danger" href="deletePost.php?id={{ post.id|e }}" onclick="return confirm('Delete this article?')">Delete</a>
                        </div>
                    </div>
                {% else %}
                    <p>You have no articles.</p>
                {% endfor %}

                <h2>Your Comments</h2>
                {% for comment in comments %}
                    <div class="user-comment mb-3">
                        <p>On article: <a href="fullArticle.php?articleId={{ comment.post_id|e }}">{{ comment.post_title|e }}</a></p>
                        <p>{{ comment.Comment_content|e }}</p>
                        <p>Created: {{ comment.created_at|e }}</p>
                        <div class="btn-group btn-group-lg" role="group">
                            <a class="btn btn-warning" href="editComment.php?idComment={{ comment.id|e }}">Edit</a>
                            <a class="btn btn-danger" href="deleteComment.php?idComment={{ comment.id|e }}" onclick="return confirm('Delete this comment?')">Delete</a>
                        </div>
                    </div>
                {% else %}
                    <p>You have not made any comments.</p>
                {% endfor %}
            </div>
        </main>
        <footer class="footer mt-4">
            <p>Copyright Â© 2025</p>
        </footer>
        {% include 'searchScript.html.twig' %}
    </body>
</html>
